<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorNo2</item>
        <item name="colorPrimaryDark">@color/colorNo3</item>
        <item name="colorAccent">#FFFFFF</item>
    </style>

    <style name="SubTheme" parent="AppTheme">
        <item name="colorAccent">@color/colorMint</item>
    </style>

    <style name="AlertTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorMint</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="colorPrimaryDark">@color/colorSplash</item>
        <item name="android:background">@drawable/splash_back</item>
    </style>

    <style name="StandardEditText" parent="Widget.AppCompat.EditText">
        <item name="android:colorControlNormal">@color/colorNo3</item>
        <item name="android:colorControlActivated">@color/colorNo2</item>
    </style>


    <style name="DialogSlideDialog">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_bottom</item>
    </style>
</resources>